<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
	
	<context:component-scan base-package="nxpense.security"/>
	<context:component-scan base-package="nxpense.controller"/>
	<context:component-scan base-package="nxpense.service"/> 
	<context:component-scan base-package="nxpense.helper"/>

	<import resource="classpath:/spring/persistence-config.xml"/>
	<import resource="classpath:/spring/security-config.xml"/>
	<import resource="classpath:/spring/view-config.xml"/>
	<import resource="classpath:/spring/repository-config.xml"/>
</beans>
